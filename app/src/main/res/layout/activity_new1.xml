<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="30dp"
            android:layout_marginStart="50dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/dataTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Select an item from the spinner to display data"
                android:textSize="18sp" />


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/dataTextView"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart2"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart3"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart2"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart4"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart3"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart5"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart4"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart6"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart5"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart7"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart6"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart8"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart7"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart9"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart8"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart10"
                android:layout_width="357dp"
                android:layout_height="512dp"
                android:layout_alignBottom="@id/line_chart9"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>